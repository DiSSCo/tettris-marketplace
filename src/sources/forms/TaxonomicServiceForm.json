                    "es",
                    "sv",
                    "tk",
                    "uk"
                ],
                "mapping": {
                    "bg": "Bulgarian",
                    "hr": "Croatian",
                    "cs": "Czech",
                    "da": "Danish",
                    "lb": "Luxembourgish",
                    "nl": "Dutch",
